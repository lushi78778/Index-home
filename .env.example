# Example environment variables (do NOT commit real secrets)
# Copy this to `.env.local` and fill values locally or via a secret manager.

# Public runtime config (safe to expose)
NEXT_PUBLIC_SITE_URL=https://example.com
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# Incremental Static Regeneration secret
REVALIDATE_SECRET=dev-secret

# Resend (emails)
RESEND_API_KEY=
CONTACT_TO_EMAIL=you@example.com
RESEND_NEWSLETTER_AUDIENCE_ID=
NEWSLETTER_DOUBLE_OPT_IN=true
NEWSLETTER_FROM=Your Name <noreply@example.com>

# Upstash Redis (optional: for rate limiting / cache)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# GitHub PAT (optional)
GITHUB_TOKEN=

# Yuque Open API
YUQUE_TOKEN=
YUQUE_LOGIN=your-yuque-login
YUQUE_INCLUDE_DRAFTS=false
